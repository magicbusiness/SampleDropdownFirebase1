<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/teal_700"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/text_dropdown"
        android:text="@string/sample_dropdown"
        android:textSize="32sp"
        android:textColor="@color/white"

        android:layout_marginTop="100dp"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:id="@+id/frame_date"

        android:layout_margin="50dp"

        app:layout_constraintTop_toBottomOf="@+id/text_dropdown" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:id="@+id/frame_time"

        android:layout_margin="50dp"

        app:layout_constraintTop_toBottomOf="@+id/frame_date" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:id="@+id/frame_location"

        android:layout_margin="50dp"

        app:layout_constraintTop_toBottomOf="@+id/frame_time" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:id="@+id/save_data"
        android:text="@string/save_data"
        android:textColor="@color/black"

        android:layout_margin="50dp"

        app:layout_constraintTop_toBottomOf="@+id/frame_location" />

</androidx.constraintlayout.widget.ConstraintLayout>